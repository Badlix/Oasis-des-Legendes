            stylesheets="@/styles/view/enclosures.css" fx:id="borderPane" styleClass="root">

    <top>
        <HBox spacing="125">
            <Button styleClass="backButton" alignment="CENTER" onAction="#backButton">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@/assets/icons/left-arrow.png"/>
